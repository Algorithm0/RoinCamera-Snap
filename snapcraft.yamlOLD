name: roin-video
version: '0.1'
summary: Remote control Roin video
description: Allows you to remotely watch video from the Roin through the control cabinet
base: core20
confinement: strict
grade: stable

apps:
  daemon:
    daemon: simple
    restart-condition: always
    command-chain:
      - bin/run-daemon
      - bin/wayland-launch
    command: bin/run.sh
    plugs:
      -  opengl
      -  wayland
      -  network     
    #  -  raw-usb
    #  -  removable-media

  roin-video:
    command-chain:
      - bin/wayland-launch
    command: bin/run.sh
    plugs:
      -  opengl
      -  wayland
      -  network
      # -  raw-usb
      # -  removable-media

  # udisksd:
  #   command: usr/lib/udisks2/udisksd
  #   daemon: simple
  #   slots:
  #     - service
  #   plugs:
  #     - hardware-observe
  #     - mount-observe
  # automount:
  #   command: bin/automount
  #   daemon: simple
  #   after:
  #     - udisksd
  #   plugs:
  #     - client
  # udiskctl:
  #   command: bin/udiskctl.sh
  #   plugs:
  #     - client


slots:
  service:
    interface: udisks2
plugs:
  client:
    interface: udisks2


layout:
  /usr/share/X11/locale:
    bind: $SNAP/usr/share/X11/locale
  # /etc/udisks2/udisks2.conf:
  #   bind-file: $SNAP/etc/udisks2/udisks2.conf
  # /etc/libblockdev/conf.d:
  #   bind: $SNAP/etc/libblockdev/conf.d
  # /var/lib/udisks2:
  #   bind: $SNAP_DATA/var/lib/udisks2
     

environment:
  LD_LIBRARY_PATH: ${LD_LIBRARY_PATH}:${SNAP}/usr/lib/:${SNAP}/usr/lib/${SNAPCRAFT_ARCH_TRIPLET}/
  PATH: $SNAP/bin/:$SNAP/usr/bin/:${PATH}
  # Prep EGL
  __EGL_VENDOR_LIBRARY_DIRS: $SNAP/etc/glvnd/egl_vendor.d:$SNAP/usr/share/glvnd/egl_vendor.d
  LIBGL_DRIVERS_PATH: ${SNAP}/usr/lib/${SNAPCRAFT_ARCH_TRIPLET}/dri
  LIBVA_DRIVERS_PATH: ${SNAP}/usr/lib/${SNAPCRAFT_ARCH_TRIPLET}/dri

parts:      
  myprog:
    plugin: dump
    source: ./bin/${SNAPCRAFT_ARCH_TRIPLET}
    organize:
      main: bin/Qml4RTSP
      
  run-scripts:
    plugin: dump
    source: ./bin/general
    organize:
      run.sh: bin/run.sh
      # automount: bin/automount
      # udiskctl.sh: bin/udiskctl.sh
            
  mesa:
    plugin: nil
    stage-packages:
      - libwayland-egl1-mesa
      - libgles2
      - libgles2-mesa
      - ubuntu-restricted-extras
      # - udisks2
      #qt5     
      - qt5-default
      - qtdeclarative5-dev
      - libqt5multimedia-plugins
      - qml-module-qtmultimedia
      # - qml-module-qtquick-controls
      # - qml-module-qtquick-controls2
      - qtwayland5
      # - qml-module-qtquick-extras
      # - qml-module-qt-labs-settings

  get-run-rules:
    plugin: nil
    override-prime: |
      chmod +x $SNAPCRAFT_PRIME/bin/Qml4RTSP
      chmod +x $SNAPCRAFT_PRIME/bin/run.sh
#      chmod +x $SNAPCRAFT_PRIME/bin/automount
#      chmod +x $SNAPCRAFT_PRIME/bin/udiskctl.sh
    after:
      - myprog
      - run-scripts
      
  mir-kiosk-snap-launch:
    plugin: dump
    source: https://github.com/MirServer/mir-kiosk-snap-launch.git
    override-build:  $SNAPCRAFT_PART_BUILD/build-with-plugs.sh opengl wayland network #raw-usb removable-media hardware-observe mount-observe
    stage-packages:
      - inotify-tools
